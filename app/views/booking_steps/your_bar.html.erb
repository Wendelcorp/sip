<div class="row text-center">
  <h2 class="heading bottom-50">Your Plan.</h2>
  <h3>Tell us about your party.</h3>

</div>
<%= form_for @booking, url: wizard_path do |f| %>
<% if @booking.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>
    <ul>
    <% @booking.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="field">
  <%= f.label :address %><br>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :guests, "Number of Guests" %><br>
  <%= f.text_field :guests %>
</div>

<div class="field">
  <%= f.label :start_time %><br>
  <%= f.time_select :start_time, {:minute_step => 30, :ampm => true} %>
</div>

<div class="field">
  <%= f.label :permit, "Do You Have a Permit?" %><br>
  <div class="col-xs-6 text-right">Yes I do</div><div class="col-xs-6"><%= f.check_box :permit, :class => "check-box" %></div>
</div>

<div class="field">
  <%= f.label :additional, "Additional Details" %><br>
  <%= f.text_area :additional, cols: "40", rows: "5" %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
