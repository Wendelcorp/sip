<!DOCTYPE html>
<html>
  <head>
    <title>SIPBAR</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <div class="width-control">
      <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <h1><%= link_to "SIPBAR", welcome_index_path(@welcome), :class => "logo"  %></h1>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
              <li><a href="#">About</a></li>
              <li><a href="#">Blog</a></li>
              <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin<span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Bookings", bookings_path(@bookings) %></li>
                  <li><%= link_to 'Create Booking', new_booking_path %></li>
                  <li><%= link_to "Archive", bookings_path(@bookings) %></li>
                  <li><a href="#">Invite</a></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %>  </li>
                </ul>
              </li>
              <% else %>
              <li><%= link_to('Sign Up', new_user_registration_path)  %></li>
              <li><%= link_to('Log In', new_user_session_path)  %>  </li>
              <% end %>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </div>
      <%= yield %>

    <footer>
      <div class="width-control">
        <div class="row">
          <div class="col-md-12 text-center">
            <h1><%= link_to "SIPBAR", welcome_index_path(@welcome), :class => "logo-footer"  %></h1>
            <div class="bottom-50"></div>
            <div class="col-sm-4"><a href="#">Terms & Conditions</a></div>
            <div class="col-sm-4"><a href="#">Contact Us</a></div>
            <div class="col-sm-4"><a href="#">Privacy Policy</a></div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
